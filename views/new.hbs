<div class="container h-200 mt-5 col-8">
  <form action="/records" method="post" class="needs-validation">
    <h3>請輸入你的支出</h3>
    <div class="input-group mb-3 ">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">名稱</span>
      </div>
      <input type="text" class="form-control" placeholder="請填入支出名稱" name="name" aria-describedby="basic-addon1" required>
    </div>
    <div class="input-group mb-3 ">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">日期</span>
      </div>
      <input type="date" class="form-control"  name="date" aria-describedby="basic-addon2" required>
    </div>
    <div class="input-group mb-3 ">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">類別</span>
      </div>
      <select class="form-control" name="category" required>
        <option value="" disabled selected>請選擇類別</option>
        <option value="01">家居物業</option>
        <option value="02">交通出行</option>
        <option value="03">休閒娛樂</option>
        <option value="04">餐飲食品</option>
        <option value="05">其他</option>
      </select>
    </div>
    <div class="input-group mb-3 ">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">金額</span>
      </div>
      <input type="number"   class="form-control" placeholder="請填寫金額" name="amount" aria-describedby="basic-addon8" required>
    </div>
    
    <button type="submit" class="btn btn-info mb-5">新增支出</button>
  </form>
</div>